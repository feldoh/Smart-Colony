			<li Class="Smart_Colony.SmartThings.Flickables.CompProperties_SmartSwitch"/>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[thingClass='Building_TurretGun']/comps</xpath>
		<value>
			<li Class="Smart_Colony.SmartThings.Turrets.CompProperties_SmartTurret"/>
		</value>
